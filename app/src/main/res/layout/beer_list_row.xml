<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brewery_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    card_view:cardElevation = "5dp"
    card_view:cardCornerRadius="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/beer_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:background="@android:drawable/screen_background_dark_transparent">

        <TextView
            android:id="@+id/beer_list_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="5"
            style="@style/PrimaryText"
            android:textColor="@color/cardview_light_background"
            tools:text="Beer Name"
            />

        <TextView
            android:id="@+id/beer_list_brewery_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Brewery"
            android:textColor="@color/cardview_light_background"
            />

        <TextView
            android:id="@+id/beer_list_style_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/cardview_light_background"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_weight="1"
            tools:text="IPA"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
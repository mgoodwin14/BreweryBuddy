<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brewery_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    card_view:cardElevation = "5dp"
    card_view:cardCornerRadius="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_gravity="top"
        android:background="@android:drawable/screen_background_dark_transparent">

        <TextView
            android:id="@+id/brewery_location_list_city_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLines="4"
            android:textColor="@color/cardview_light_background"
            tools:text="Columbs, OH"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/brewery_location_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:background="@android:drawable/screen_background_dark_transparent">



        <TextView
            android:id="@+id/brewery_list_brand_classification_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLines="4"
            android:textColor="@color/cardview_light_background"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            tools:text="Brewpub"
            />



        <TextView
            android:id="@+id/brewery_list_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/cardview_light_background"
            style="@style/PrimaryText"
            tools:text="Brewery Name"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>
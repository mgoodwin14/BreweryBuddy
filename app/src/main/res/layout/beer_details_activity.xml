<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/beer_details_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal|top"/>

    <TextView
        android:id="@+id/beer_details_name_textview"
        android:layout_below="@id/beer_details_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        tools:text="Beer Name"
        />

    <TextView
        android:id="@+id/beer_details_style_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/beer_details_name_textview"
        android:layout_alignParentRight="true"
        tools:text="Style"
        />

    <TextView
        android:id="@+id/beer_details_description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/primary_text_size"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_below="@id/beer_details_name_textview"
        tools:text="description"
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/beer_details_description_textview"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/abv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcohol Content: "
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/abv_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/abv_label"
                android:layout_toRightOf="@id/abv_label"
                tools:text="5.6%"
                />

            <TextView
                android:id="@+id/beg_grav_label"
                android:layout_below="@id/abv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginning Gravity:"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/beg_grav_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/beg_grav_label"
                android:layout_toRightOf="@id/beg_grav_label"
                tools:text="13.1"
                />

            <TextView
                android:id="@+id/end_grav_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beg_grav_label"
                android:text="Ending Gravity:"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/end_grav_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/end_grav_label"
                android:layout_toRightOf="@id/end_grav_label"
                tools:text="2.8"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>